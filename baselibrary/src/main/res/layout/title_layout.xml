<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/base_dimen_18">

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/base_dimen_64"
        android:layout_height="@dimen/base_dimen_64"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base_dimen_24"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/txt_left"
        style="@style/title_text_style"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_toRightOf="@+id/back"
        android:textSize="@dimen/normalTextSize"
        android:visibility="gone" />

    <TextView
        android:id="@+id/m_title"
        style="@style/title_text_style"
        android:layout_centerInParent="true"
        android:textSize="@dimen/bigTextSize"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="@dimen/base_dimen_50"
        android:layout_height="@dimen/base_dimen_50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_right"
        style="@style/title_text_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:textSize="@dimen/normalTextSize"
        android:visibility="gone" />
</RelativeLayout>
