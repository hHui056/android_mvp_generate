<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_80"
        android:background="@color/logoColor">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/base_dimen_50"
            android:layout_height="@dimen/base_dimen_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/base_dimen_24"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/txt_left"
            style="@style/TextBigStyle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:textSize="@dimen/normalTextSize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/m_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/bigTextSize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="@dimen/base_dimen_50"
            android:layout_height="@dimen/base_dimen_50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normalTextSize"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>