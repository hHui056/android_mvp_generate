<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/base_dimen_18">

    <RelativeLayout
        android:id="@+id/layout_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_12"
        android:padding="@dimen/base_dimen_12">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/base_dimen_48"
            android:layout_height="@dimen/base_dimen_48"
            android:layout_centerInParent="true"
            android:src="@drawable/back" />
    </RelativeLayout>


    <TextView
        android:id="@+id/txt_left"
        style="@style/title_text_style"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_toRightOf="@+id/layout_back"
        android:textSize="@dimen/normalTextSize"
        android:visibility="gone" />

    <TextView
        android:id="@+id/m_title"
        style="@style/title_text_style"
        android:layout_centerInParent="true"
        android:textSize="@dimen/normalTextSize"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layout_right1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:layout_toLeftOf="@+id/layout_right2"
        android:padding="@dimen/base_dimen_12"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_right1"
            android:layout_width="@dimen/base_dimen_36"
            android:layout_height="@dimen/base_dimen_36"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:padding="@dimen/base_dimen_12"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_right2"
            android:layout_width="@dimen/base_dimen_36"
            android:layout_height="@dimen/base_dimen_36"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:padding="@dimen/base_dimen_12"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_right"
            style="@style/title_text_style"
            android:layout_centerInParent="true"
            android:textSize="@dimen/normalTextSize" />
    </RelativeLayout>

</RelativeLayout>
